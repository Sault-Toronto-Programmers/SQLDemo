<Window x:Class="SQLDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLDemo"
        mc:Ignorable="d"
        Title="Supplier List" Height="450" Width="800" Loaded="Window_Loaded" Unloaded="Window_Unloaded">
 
        
        

    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <TextBlock HorizontalAlignment="Left" Text="Supplier ID" Margin="10,10,10,10" />
            <TextBox HorizontalAlignment="Left"  Width="120"  x:Name="City" Margin="40,10,40,40" />
            <Button Content="Find Suppliers" Margin="40,10,40,40" Click="Button_Click"></Button>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <TextBlock HorizontalAlignment="Center">The companies in the selected city are</TextBlock>
            <DataGrid x:Name="CompanyList" HorizontalAlignment="Stretch" >
                
            </DataGrid>
        </StackPanel>
        
    </StackPanel>
</Window>
